.bg-contact100(style="background-image: url('images/bg-01.jpg');")
  .container-contact100
    .wrap-contact100
      .contact100-pic.js-tilt(data-tilt='')
        img(src='images/img-01.png' alt='IMG')
      form.contact100-form.validate-form(method="POST" action="send")
        span.contact100-form-title
          | Get in touch
        .wrap-input100.validate-input(data-validate='Name is required')
          input.input100(type='text' name='name' placeholder='Name')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-user(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input.input100(type='text' name='email' placeholder='Email')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Message is required')
          textarea.input100(name='message' placeholder='Message')
          span.focus-input100
        .container-contact100-form-btn
          button.contact100-form-btn(type="submit")
            | Send
